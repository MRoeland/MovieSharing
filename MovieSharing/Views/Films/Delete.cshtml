@model VideotheekWebApp.Models.Film

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["FilmDelete"]</h1>

<h3>@Localizer["Confirmation"]</h3>
<div>
    <h4>@Localizer["Movie"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Title"]
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            @Localizer["Director"]
        </dt>
        <dd class="col-sm-10">
            @Model.Regisseur
        </dd>
        <dt class="col-sm-2">
            @Localizer["Actors"]
        </dt>
        <dd class="col-sm-10">
            @Model.Acteurs
        </dd>
        <dt class="col-sm-2">
            @Localizer["Genre"]
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>
        <dt class="col-sm-2">
            @Localizer["Price"]
        </dt>
        <dd class="col-sm-10">
            @Model.Prijs
        </dd>
        <dt class="col-sm-2">
            @Localizer["Amount"]
        </dt>
        <dd class="col-sm-10">
            @Model.Aantal
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@Localizer["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["Return"]</a>
    </form>
</div>
