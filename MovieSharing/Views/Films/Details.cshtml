@model VideotheekWebApp.Models.Film

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["FilmDetails"]</h1>

<div>
    <h4>@Localizer["Movie"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Title"]
        </dt>
        <dd class = "col-sm-10">
            @Model.Title
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Director"]
        </dt>
        <dd class = "col-sm-10">
            @Model.Regisseur
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Actors"]
        </dt>
        <dd class = "col-sm-10">
            @Model.Acteurs
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Genre"]
        </dt>
        <dd class = "col-sm-10">
            @Model.Genre
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Price"]
        </dt>
        <dd class = "col-sm-10">
            @Model.Prijs
        </dd>
        <dt class = "col-sm-2">
            @Localizer["Amount"]
        </dt>
        <dd class = "col-sm-10">
            @Model.Aantal
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Edit"] |</a>
    }
    <a asp-action="Index">@Localizer["Return"]</a>
</div>
