@model VideotheekWebApp.Models.Lid

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["DetailsLid"]</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Username"]
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            @Localizer["Voornaam"]
        </dt>
        <dd class="col-sm-10">
            @Model.Voornaam
        </dd>
        <dt class="col-sm-2">
            @Localizer["Email"]
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            @Localizer["PhoneNumber"]
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            @Localizer["Roles"]
        </dt>
        <dd class="col-sm-10">
             @string.Join(", ", await UserManager.GetRolesAsync(Model))
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Edit"] | </a>
    }
    <a asp-action="Index">@Localizer["Return"]</a>
</div>
