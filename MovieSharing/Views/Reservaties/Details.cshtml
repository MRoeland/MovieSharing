@model MovieSharing.Models.Reservatie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["DetailsReservation"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Username"]
        </dt>
        <dd class = "col-sm-10">
            @Model.lid.UserName
        </dd>
        <dt class="col-sm-2">
            @Localizer["Title"]
        </dt>
        <dd class = "col-sm-10">
            @Model.film.Title
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Edit"] |</a>
    }

    <a asp-action="Index">@Localizer["Return"]</a>
</div>
