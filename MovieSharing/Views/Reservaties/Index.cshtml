@model IEnumerable<MovieSharing.Models.Reservatie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["IndexReservation"]</h1>

<p>
    <a asp-action="Create">@Localizer["Create"]</a>
</p>

@if (User.IsInRole("admin"))
{
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                @Localizer["SearchTitle"]: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value=@Localizer["Search"] class="btn btn-default" /> |
                <a asp-action="Index">@Localizer["Return"]</a>
            </p>
        </div>
    </form>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer["Username"]
            </th>
            <th>
                @Localizer["Title"]
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.lid.UserName
            </td>
            <td>
                @item.film.Title
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a>

                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id"> | @Localizer["Edit"]</a>
                    }

                    <a asp-action="Delete" asp-route-id="@item.Id"> | @Localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
